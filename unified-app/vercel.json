{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "rewrites": [
    {
      "source": "/((?!api|images|assets|robots.txt|sitemap.xml|site.webmanifest|_headers|_redirects).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/curriculo-ia.html",
      "destination": "/curriculo-ia",
      "permanent": true
    },
    {
      "source": "/gera-proposta.html", 
      "destination": "/gera-proposta",
      "permanent": true
    },
    {
      "source": "/politica-privacidade.html",
      "destination": "/politica-privacidade", 
      "permanent": true
    },
    {
      "source": "/termos-uso.html",
      "destination": "/termos-uso",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
